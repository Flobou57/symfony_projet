{% extends 'base.html.twig' %}

{% block title %}{{ 'auth.login_title'|trans }}{% endblock %}

{% block body %}
<div class="min-vh-100 d-flex align-items-center justify-content-center bg-dark text-light">
    <div class="card bg-dark border-info shadow-lg p-4 w-100" style="max-width: 520px;">
        <div class="mb-3 text-center">
            <p class="badge bg-info text-dark mb-2">#Connexion</p>
            <h2 class="text-info fw-bold mb-1">ğŸ” {{ 'auth.login_title'|trans }}</h2>
            <p class="text-muted mb-0 small">AccÃ¨s compte administrateur ou client.</p>
        </div>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form method="post">
            <div class="mb-3">
                <label for="inputEmail" class="form-label text-light">{{ 'auth.email'|trans }}</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                       class="form-control bg-dark text-light border-info"
                       autocomplete="email" required autofocus>
            </div>

            <div class="mb-3">
                <label for="inputPassword" class="form-label text-light">{{ 'auth.password'|trans }}</label>
                <input type="password" name="password" id="inputPassword"
                       class="form-control bg-dark text-light border-info"
                       autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">

            <div class="form-check mb-3">
                <input type="checkbox" name="_remember_me" id="remember_me" class="form-check-input">
                <label for="remember_me" class="form-check-label text-light">{{ 'auth.remember'|trans }}</label>
            </div>

            <button class="btn btn-info w-100" type="submit">{{ 'auth.submit'|trans }}</button>

            <div class="text-center mt-3">
                <a href="{{ path('app_register') }}" class="text-decoration-none text-light">
                    {{ 'auth.no_account'|trans }}
                </a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
