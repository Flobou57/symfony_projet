<div class="row">
    {% for product in products %}
        <div class="col-md-4 mb-4">
            <div class="card bg-dark border-info shadow-lg product-card h-100">
                {% if product.images|length > 0 %}
                    <img src="{{ product.images[0].url }}" class="card-img-top" alt="{{ product.name }}">
                {% else %}
                    <img src="/images/no-image.png" class="card-img-top" alt="Aucune image">
                {% endif %}

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-info fw-bold">{{ product.name }}</h5>
                    <p class="text-muted small mb-1">
                        {{ 'product.category'|trans }} : {{ product.category.name ?? 'product.category_none'|trans }}
                    </p>
                    {% set statusKey = product.status and product.status.label ? 'status_labels.' ~ product.status.label : null %}
                    <p class="text-warning small mb-2">
                        {{ 'product.status'|trans }} : {{ statusKey ? statusKey|trans : 'â€”' }}
                    </p>
                    <p class="card-text flex-grow-1">{{ product.description|slice(0, 100) }}...</p>
                    <h5 class="mt-auto text-end text-light fw-bold">{{ product.price }} â‚¬</h5>

                    <div class="d-flex gap-2 mt-3">
                        <a href="{{ path('app_shop_product_show', { id: product.id }) }}"
                           class="btn btn-outline-light w-50">
                            ğŸ‘ï¸ Voir
                        </a>
                        <a href="{{ path('app_shop_add', { id: product.id }) }}"
                           class="btn btn-outline-info w-50"
                           data-action="click->cart#add">
                            ğŸ›’ {{ 'shop.add_to_cart'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <p class="text-center mt-5">{{ 'shop.no_results'|trans }}</p>
    {% endfor %}
</div>
