{% extends 'base.html.twig' %}

{% block title %}{{ 'checkout.title'|trans }}{% endblock %}

{% block body %}
<div class="container mt-5 text-light">
    <div class="hero-section mb-4 p-4 p-lg-5 rounded">
        <p class="badge bg-info text-dark mb-2">#Checkout</p>
        <h2 class="fw-bold mb-2">ðŸ’³ {{ 'checkout.title'|trans }}</h2>
        <p class="text-muted mb-0">{{ 'checkout.intro'|trans }}</p>
    </div>

    <div class="row g-4">
        <div class="col-lg-7">
            <div class="card bg-dark border-info shadow-lg p-4 h-100">
                <h5 class="text-info mb-3">Paiement</h5>
                <form method="post" novalidate>
                    <div class="mb-3">
                        <label class="form-label">{{ 'checkout.card_number'|trans }}</label>
                        <input type="text"
                               name="card_number"
                               pattern="\d{16}"
                               maxlength="16"
                               class="form-control bg-dark text-light border-info"
                               placeholder="1111 2222 3333 4444"
                               required>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">{{ 'checkout.expiration'|trans }}</label>
                            <input type="month"
                                   name="expiration"
                                   class="form-control bg-dark text-light border-info"
                                   min="2025-12"
                                   required
                                   title="{{ 'checkout.expiration'|trans }} (YYYY-MM)">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">{{ 'checkout.cvv'|trans }}</label>
                            <input type="text"
                                   name="cvv"
                                   pattern="\d{3}"
                                   maxlength="3"
                                   class="form-control bg-dark text-light border-info"
                                   placeholder="123"
                                   required>
                        </div>
                    </div>

                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-info px-5 py-2 fw-bold rounded-pill shadow-sm">ðŸ’° {{ 'checkout.pay_now'|trans }}</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="card bg-dark border-info shadow-lg p-4 h-100">
                <h5 class="text-info mb-3">ðŸ§¾ {{ 'checkout.summary'|trans }}</h5>
                <ul class="list-group bg-dark border-0">
                    {% for item in items %}
                        <li class="list-group-item bg-dark text-light border-info d-flex justify-content-between">
                            <span>{{ item.product.name }} Ã— {{ item.quantity }}</span>
                            <strong>{{ item.subtotal }} â‚¬</strong>
                        </li>
                    {% endfor %}
                    <li class="list-group-item bg-info text-dark d-flex justify-content-between fw-bold">
                        <span>{{ 'checkout.total'|trans }}</span>
                        <span>{{ total }} â‚¬</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<style>
.hero-section {
    background: radial-gradient(circle at 20% 20%, rgba(13,202,240,0.12), transparent 30%), #0f131a;
    border: 1px solid rgba(13,202,240,0.2);
    box-shadow: 0 12px 30px rgba(0,0,0,0.35);
}
input:focus {
    border-color: #0dcaf0 !important;
    box-shadow: 0 0 10px rgba(13, 202, 240, 0.5);
}
button:hover {
    transform: scale(1.02);
    transition: 0.2s;
}
</style>
{% endblock %}
