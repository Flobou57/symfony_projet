{% extends 'base.html.twig' %}

{% block title %}{{ 'nav.shop'|trans }}{% endblock %}

{% block body %}
<div class="container mt-5 text-light">
    <div class="hero-shop mb-4 p-4 p-lg-5 rounded">
        <p class="badge bg-info text-dark mb-2">{{ 'shop.badge'|trans }}</p>
        <h1 class="fw-bold mb-2">{{ 'shop.title'|trans }}</h1>
        <p class="text-muted mb-0">{{ 'shop.hero_subtitle'|trans }}</p>
    </div>

    <div data-controller="live-search"
         data-live-search-live-url-value="{{ path('app_shop_live_search') }}"
         data-live-search-suggestions-url-value="{{ path('app_shop_suggestions') }}"
         data-live-search-min-chars-value="2"
         data-live-search-delay-value="300">
        
        <form class="mb-5 bg-dark p-3 rounded border border-info shadow-sm filter-card"
              method="get"
              action="{{ path('app_shop_index') }}">
            <div class="row g-3 align-items-end">
                <div class="col-md-4 position-relative">
                    <label class="form-label text-info fw-bold">{{ 'shop.search_label'|default('Recherche')|trans }}</label>
                    <input type="text"
                           name="q"
                           value="{{ selectedQuery }}"
                           class="form-control bg-dark text-light border-info"
                           placeholder="{{ 'shop.search_placeholder'|trans }}"
                           data-live-search-target="input"
                           data-action="input->live-search#search keydown->live-search#navigate"
                           autocomplete="off">
                    
                    {# Dropdown des suggestions #}
                    <div class="autocomplete-suggestions d-none"
                         data-live-search-target="suggestions">
                    </div>
                    <small class="text-muted">{{ 'shop.search_placeholder'|trans }}</small>
                </div>

                <div class="col-md-4">
                    <label class="form-label text-info fw-bold">{{ 'shop.filter_category'|trans }}</label>
                    <select name="category"
                            class="form-select bg-dark text-light border-info">
                        <option value="">{{ 'shop.filter_category_placeholder'|trans }}</option>
                        {% for category in categories %}
                            <option value="{{ category.id }}" {% if selectedCategory == category.id %}selected{% endif %}>
                                {{ category.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label text-info fw-bold">{{ 'shop.filter_status'|trans }}</label>
                    <select name="status"
                            class="form-select bg-dark text-light border-info">
                        <option value="">{{ 'shop.filter_status_placeholder'|trans }}</option>
                        {% for s in statuses %}
                            <option value="{{ s.id }}" {% if selectedStatus == s.id %}selected{% endif %}>
                                {{ ('status_labels.' ~ s.label)|trans }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="col-md-2 text-end">
                    <button type="submit"
                            class="btn btn-info w-100 fw-bold">
                        {{ 'shop.filter_button'|trans }} üîç
                    </button>
                </div>
            </div>
        </form>

        <div class="d-none text-center my-3" data-live-search-target="loader">
            <div class="spinner-border text-info" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>

        <div id="shop-results" data-live-search-target="results">
            {% include 'shop/_results.html.twig' with { products: products } %}
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_shop_cart') }}" class="btn btn-info px-5 py-2 fw-bold shadow-sm">
            {{ 'shop.cart_button'|trans }}
        </a>
    </div>
</div>

<style>
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .product-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 0 25px rgba(13, 202, 240, 0.3);
    }
    select:focus, button:focus {
        outline: none !important;
        box-shadow: 0 0 10px #0dcaf0;
    }
    option {
        background-color: #212529;
        color: #f8f9fa;
    }
    .hero-shop {
        background: radial-gradient(circle at 20% 20%, rgba(13,202,240,0.12), transparent 30%),
                    radial-gradient(circle at 80% 0%, rgba(255,255,255,0.05), transparent 35%),
                    #0f131a;
        border: 1px solid rgba(13,202,240,0.15);
        box-shadow: 0 12px 30px rgba(0,0,0,0.35);
    }
    .filter-card {
        box-shadow: 0 10px 28px rgba(0,0,0,0.25);
    }
    
    /* Autocomplete Styles */
    .autocomplete-suggestions {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        z-index: 1000;
        background: #1a1d24;
        border: 1px solid rgba(13, 202, 240, 0.3);
        border-top: none;
        border-radius: 0 0 8px 8px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        max-height: 400px;
        overflow-y: auto;
        margin-top: -1px;
    }
    
    .autocomplete-item {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 6px 10px;
        cursor: pointer;
        border-bottom: 1px solid rgba(13, 202, 240, 0.1);
        transition: all 0.2s ease;
        text-decoration: none;
    }
    
    .autocomplete-item:last-child {
        border-bottom: none;
    }
    
    .autocomplete-item:hover,
    .autocomplete-item.active {
        background: rgba(13, 202, 240, 0.15);
        border-left: 3px solid #0dcaf0;
        padding-left: 13px;
    }
    
    .autocomplete-thumb {
        width: 25px !important;
        height: 25px !important;
        max-width: 25px !important;
        max-height: 25px !important;
        object-fit: cover;
        border-radius: 3px;
        border: 1px solid rgba(13, 202, 240, 0.2);
        flex-shrink: 0;
    }
    
    .autocomplete-info {
        flex: 1;
        min-width: 0;
    }
    
    .autocomplete-name {
        color: #f8f9fa;
        font-weight: 500;
        font-size: 0.85rem;
        margin-bottom: 2px;
        line-height: 1.2;
    }
    
    .autocomplete-price {
        color: #0dcaf0;
        font-weight: bold;
        font-size: 0.85rem;
        white-space: nowrap;
    }
    
    /* Scrollbar pour les suggestions */
    .autocomplete-suggestions::-webkit-scrollbar {
        width: 8px;
    }
    
    .autocomplete-suggestions::-webkit-scrollbar-track {
        background: rgba(13, 202, 240, 0.05);
    }
    
    .autocomplete-suggestions::-webkit-scrollbar-thumb {
        background: rgba(13, 202, 240, 0.3);
        border-radius: 4px;
    }
    
    .autocomplete-suggestions::-webkit-scrollbar-thumb:hover {
        background: rgba(13, 202, 240, 0.5);
    }
</style>
{% endblock %}
