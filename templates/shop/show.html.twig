{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<div class="container mt-5 text-light">
    <div class="card bg-dark border-info shadow-lg p-4 product-hero">
        <div class="row gy-4">
            <div class="col-md-5">
                <div class="image-frame">
                    {% if product.images|length > 0 %}
                        <img src="{{ product.images[0].url }}" alt="{{ product.name }}" class="img-fluid rounded">
                    {% else %}
                        <div class="bg-secondary text-center p-5 rounded">Aucune image</div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-7 d-flex flex-column">
                <p class="badge bg-info text-dark align-self-start mb-2">{{ product.category ? product.category.name : '‚Äî' }}</p>
                <h2 class="text-info fw-bold">{{ product.name }}</h2>
                <p class="text-muted mb-3">{{ product.description }}</p>
                <p class="mb-1"><strong>{{ 'product.status'|trans }} :</strong> {{ ('status_labels.' ~ product.status.label)|trans }}</p>
                <p class="h4 text-success mt-auto">{{ product.price }} ‚Ç¨</p>

                <div class="mt-3">
                    <a href="{{ path('app_shop_add', { id: product.id }) }}"
                       class="btn btn-info"
                       data-action="click->cart#add">
                        üõí {{ 'shop.add_to_cart'|trans }}
                    </a>
                    <a href="{{ path('app_shop_index') }}" class="btn btn-outline-light ms-2">‚¨ÖÔ∏è {{ 'product.show_back'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
.product-hero {
    background: radial-gradient(circle at 10% 10%, rgba(13,202,240,0.08), transparent 30%),
                #0f131a;
    border: 1px solid rgba(13,202,240,0.2);
}
.image-frame {
    background: #111827;
    border: 1px solid rgba(13,202,240,0.15);
    border-radius: 12px;
    padding: 12px;
    box-shadow: inset 0 0 15px rgba(13,202,240,0.1);
}
</style>
{% endblock %}
