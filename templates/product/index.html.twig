{% extends 'base.html.twig' %}

{% block title %}{{ 'product.index_title'|trans }}{% endblock %}

{% block body %}
<div class="container mt-5 text-light">
    <div class="hero-section mb-4 p-4 p-lg-5 rounded">
        <p class="badge bg-info text-dark mb-2">#Produits</p>
        <h1 class="fw-bold mb-2">üõí {{ 'product.index_title'|trans }}</h1>
        <p class="text-muted mb-0">G√©rez vos produits et filtres.</p>
    </div>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div></div>
        <a href="{{ path('app_product_new') }}" class="btn btn-success btn-lg">‚ûï {{ 'product.add'|trans }}</a>
    </div>

    <!-- üîç Filtres combin√©s -->
    <form method="get" action="{{ path('app_product_index') }}" class="mb-4">
        <div class="card bg-dark border-secondary shadow-sm p-3">
            <div class="row align-items-end g-3">
                <!-- Filtre cat√©gorie -->
                <div class="col-md-5">
                    <label for="category" class="form-label fw-bold text-info">{{ 'product.filter_category'|trans }}</label>
                    <select name="category" id="category" class="form-select bg-dark text-light border-secondary">
                        <option value="">{{ 'shop.filter_category_placeholder'|trans }}</option>
                        {% for category in categories %}
                            <option value="{{ category.id }}" {% if selectedCategoryId == category.id %}selected{% endif %}>
                                {{ category.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <!-- Filtre statut -->
                <div class="col-md-5">
                    <label for="status" class="form-label fw-bold text-info">{{ 'product.filter_status'|trans }}</label>
                    <select name="status" id="status" class="form-select bg-dark text-light border-secondary">
                        <option value="">{{ 'shop.filter_status_placeholder'|trans }}</option>
                        {% for s in statuses %}
                            <option value="{{ s }}" {% if selectedStatus == s %}selected{% endif %}>
                                {{ ('status_labels.' ~ s)|trans }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <!-- Boutons -->
                <div class="col-md-2 text-end">
                    <button type="submit" class="btn btn-primary w-100">üîé {{ 'product.filter'|trans }}</button>
                    {% if selectedCategoryId or selectedStatus %}
                        <a href="{{ path('app_product_index') }}" class="btn btn-outline-light w-100 mt-2">‚ùå {{ 'product.reset'|trans }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </form>

    <!-- üß© Tableau produits -->
    <div class="card bg-dark border-info shadow-lg p-4">
        <table class="table table-dark table-hover align-middle">
            <thead>
                <tr class="text-info">
                    <th>ID</th>
                    <th>{{ 'product.name'|default('Nom') }}</th>
                    <th>{{ 'product.price'|default('Prix') }}</th>
                    <th>{{ 'product.stock'|default('Stock') }}</th>
                    <th>{{ 'product.category'|trans }}</th>
                    <th>{{ 'product.status'|default('Statut') }}</th>
                    <th>{{ 'admin.users_actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td class="fw-bold">{{ product.name }}</td>
                        <td>{{ product.price }} ‚Ç¨</td>
                        <td>{{ product.stock }}</td>
                        <td>{{ product.category ? product.category.name : '‚Äî' }}</td>
                        <td>
                            {% set statusLabel = product.status %}
                            {% set statusKey = 'status_labels.' ~ statusLabel %}
                            {% if statusLabel == 'Disponible' %}
                                <span class="badge bg-success">{{ statusKey|trans }}</span>
                            {% elseif statusLabel == 'En rupture de stock' %}
                                <span class="badge bg-danger">{{ statusKey|trans }}</span>
                            {% elseif statusLabel == 'En pr√©commande' %}
                                <span class="badge bg-warning text-dark">{{ statusKey|trans }}</span>
                            {% else %}
                                <span class="badge bg-secondary">N/A</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-outline-info btn-sm">üëÅÔ∏è {{ 'common.view'|trans }}</a>
                            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning btn-sm">‚úèÔ∏è {{ 'product.edit'|trans }}</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center text-muted">{{ 'product.no_results'|trans }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<style>
.hero-section {
    background: radial-gradient(circle at 20% 20%, rgba(13,202,240,0.12), transparent 30%), #0f131a;
    border: 1px solid rgba(13,202,240,0.2);
    box-shadow: 0 12px 30px rgba(0,0,0,0.35);
}
</style>
{% endblock %}
