{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
<div class="container mt-5 text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-info">üõí Liste des produits</h1>
        <a href="{{ path('app_product_new') }}" class="btn btn-success btn-lg">‚ûï Ajouter</a>
    </div>

    <!-- üîç Filtres combin√©s -->
    <form method="get" action="{{ path('app_product_index') }}" class="mb-4">
        <div class="card bg-dark border-secondary shadow-sm p-3">
            <div class="row align-items-end g-3">
                <!-- Filtre cat√©gorie -->
                <div class="col-md-5">
                    <label for="category" class="form-label fw-bold text-info">Filtrer par cat√©gorie :</label>
                    <select name="category" id="category" class="form-select bg-dark text-light border-secondary">
                        <option value="">-- Toutes les cat√©gories --</option>
                        {% for category in categories %}
                            <option value="{{ category.id }}" {% if selectedCategoryId == category.id %}selected{% endif %}>
                                {{ category.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <!-- Filtre statut -->
                <div class="col-md-5">
                    <label for="status" class="form-label fw-bold text-info">Filtrer par statut :</label>
                    <select name="status" id="status" class="form-select bg-dark text-light border-secondary">
                        <option value="">-- Tous les statuts --</option>
                        {% for s in statuses %}
                            <option value="{{ s }}" {% if selectedStatus == s %}selected{% endif %}>{{ s }}</option>
                        {% endfor %}
                    </select>
                </div>

                <!-- Boutons -->
                <div class="col-md-2 text-end">
                    <button type="submit" class="btn btn-primary w-100">üîé Filtrer</button>
                    {% if selectedCategoryId or selectedStatus %}
                        <a href="{{ path('app_product_index') }}" class="btn btn-outline-light w-100 mt-2">‚ùå R√©initialiser</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </form>

    <!-- üß© Tableau produits -->
    <div class="card bg-dark border-secondary shadow-lg p-4">
        <table class="table table-dark table-hover align-middle">
            <thead>
                <tr class="text-info">
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Stock</th>
                    <th>Cat√©gorie</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td class="fw-bold">{{ product.name }}</td>
                        <td>{{ product.price }} ‚Ç¨</td>
                        <td>{{ product.stock }}</td>
                        <td>{{ product.category ? product.category.name : '‚Äî' }}</td>
                        <td>
                            {% if product.status == 'Disponible' %}
                                <span class="badge bg-success">{{ product.status }}</span>
                            {% elseif product.status == 'En rupture de stock' %}
                                <span class="badge bg-danger">{{ product.status }}</span>
                            {% elseif product.status == 'En pr√©commande' %}
                                <span class="badge bg-warning text-dark">{{ product.status }}</span>
                            {% else %}
                                <span class="badge bg-secondary">N/A</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-outline-info btn-sm">üëÅÔ∏è Voir</a>
                            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning btn-sm">‚úèÔ∏è Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center text-muted">Aucun produit trouv√©.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
