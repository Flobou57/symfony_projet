{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Détails{% endblock %}

{% block body %}
<div class="container mt-5 text-light">
    <div class="card bg-dark shadow-lg border-secondary p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="text-info">{{ product.name }}</h1>
            <a href="{{ path('app_product_index') }}" class="btn btn-outline-light">⬅️ Retour à la liste</a>
        </div>

        <div class="row">
            <!-- Image du produit -->
            <div class="col-md-4">
                {% if product.images|length > 0 %}
                    <img src="{{ product.images[0].url }}" alt="{{ product.name }}" class="img-fluid rounded shadow">
                {% else %}
                    <div class="text-center bg-secondary p-5 rounded">
                        <p class="text-muted">Aucune image disponible</p>
                    </div>
                {% endif %}
            </div>

            <!-- Détails du produit -->
            <div class="col-md-8">
                <ul class="list-group list-group-flush bg-dark">
                    <li class="list-group-item bg-dark text-light">
                        <strong>Prix :</strong> {{ product.price|number_format(2, ',', ' ') }} €
                    </li>
                    <li class="list-group-item bg-dark text-light">
                        <strong>Stock :</strong> {{ product.stock }}
                    </li>
                    <li class="list-group-item bg-dark text-light">
                        <strong>Catégorie :</strong> {{ product.category ? product.category.name : 'Aucune' }}
                    </li>
                    <li class="list-group-item bg-dark text-light">
                        <strong>Statut :</strong>
                        {% set label = product.status.label %}
                        {% if label == 'Disponible' %}
                            <span class="badge bg-success">{{ label }}</span>
                        {% elseif label == 'En rupture de stock' %}
                            <span class="badge bg-danger">{{ label }}</span>
                        {% else %}
                            <span class="badge bg-warning text-dark">{{ label }}</span>
                        {% endif %}
                    </li>
                </ul>

                <div class="mt-4">
                    <h4>Description :</h4>
                    <p class="text-muted">{{ product.description }}</p>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary">✏️ Modifier</a>
                    {{ include('product/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
