{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - {{ 'product.show_back'|trans }}{% endblock %}

{% block body %}
<div class="container mt-5 text-light">
    <div class="hero-section mb-4 p-4 p-lg-5 rounded">
        <p class="badge bg-info text-dark mb-2">#Produit</p>
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h1 class="fw-bold mb-2">{{ product.name }}</h1>
                <p class="text-muted mb-0">{{ product.category ? product.category.name : '—' }}</p>
            </div>
            <a href="{{ path('app_product_index') }}" class="btn btn-outline-light">⬅️ {{ 'product.show_back'|trans }}</a>
        </div>
    </div>

    <div class="card bg-dark shadow-lg border-info p-4">
        <div class="row g-4">
            <div class="col-md-4">
                {% if product.images|length > 0 %}
                    <img src="{{ product.images[0].url }}" alt="{{ product.name }}" class="img-fluid rounded shadow">
                {% else %}
                    <div class="text-center bg-secondary p-5 rounded">
                        <p class="text-muted">{{ 'product.no_image'|trans }}</p>
                    </div>
                {% endif %}
            </div>

            <div class="col-md-8">
                <ul class="list-group list-group-flush bg-dark">
                    <li class="list-group-item bg-dark text-light">
                        <strong>{{ 'product.price'|trans }} :</strong> {{ product.price|number_format(2, ',', ' ') }} €
                    </li>
                    <li class="list-group-item bg-dark text-light">
                        <strong>{{ 'product.stock'|trans }} :</strong> {{ product.stock }}
                    </li>
                    <li class="list-group-item bg-dark text-light">
                        <strong>{{ 'product.category'|trans }} :</strong> {{ product.category ? product.category.name : 'product.category_none'|trans }}
                    </li>
                    <li class="list-group-item bg-dark text-light">
                        <strong>{{ 'product.status'|trans }} :</strong>
                        {% set label = product.status.label %}
                        {% set statusKey = 'status_labels.' ~ label %}
                        {% if label == 'Disponible' %}
                            <span class="badge bg-success">{{ statusKey|trans }}</span>
                        {% elseif label == 'En rupture de stock' %}
                            <span class="badge bg-danger">{{ statusKey|trans }}</span>
                        {% else %}
                            <span class="badge bg-warning text-dark">{{ statusKey|trans }}</span>
                        {% endif %}
                    </li>
                </ul>

                <div class="mt-4">
                    <h4>{{ 'product.description'|default('Description')|trans }}</h4>
                    <p class="text-muted">{{ product.description }}</p>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary">✏️ {{ 'product.edit'|trans }}</a>
                    {{ include('product/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
<style>
.hero-section {
    background: radial-gradient(circle at 20% 20%, rgba(13,202,240,0.12), transparent 30%), #0f131a;
    border: 1px solid rgba(13,202,240,0.2);
    box-shadow: 0 12px 30px rgba(0,0,0,0.35);
}
</style>
{% endblock %}
