{% extends 'base.html.twig' %}
{% block title %}{{ 'admin.orders_title'|trans }}{% endblock %}

{% block body %}
<div class="container mt-4 text-light">
    <div class="hero-section mb-4 p-4 p-lg-5 rounded">
        <p class="badge bg-info text-dark mb-2">#Commandes</p>
        <h2 class="fw-bold mb-2">ğŸ§¾ {{ 'admin.orders_heading'|trans }}</h2>
        <p class="text-muted mb-0">Suivez et filtrez les commandes.</p>
    </div>

    <table class="table table-dark table-striped border-info align-middle shadow-sm">
        <thead class="table-info text-dark">
            <tr>
                <th>{{ 'admin.orders_id'|trans }}</th>
                <th>{{ 'admin.orders_user'|trans }}</th>
                <th>{{ 'admin.orders_total'|trans }}</th>
                <th>{{ 'admin.orders_status'|trans }}</th>
                <th>{{ 'admin.orders_date'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>#{{ order.id }}</td>
                {% set name = [order.user.firstName, order.user.lastName]|filter(v => v is not null and v != '')|join(' ') %}
                <td>{{ name ?: order.user.email }}</td>
                <td>{{ order.total|number_format(2, ',', ' ') }}</td>
                {% set statusValue = order.status ? order.status.value : '' %}
                {% set statusKey = statusValue ? 'order_status.' ~ statusValue : '' %}
                <td>
                    {% if statusValue == 'livrÃ©e' %}
                        <span class="badge bg-success">{{ statusKey|trans }}</span>
                    {% elseif statusValue == 'expÃ©diÃ©e' %}
                        <span class="badge bg-info text-dark">{{ statusKey|trans }}</span>
                    {% elseif statusValue == 'en prÃ©paration' %}
                        <span class="badge bg-warning text-dark">{{ statusKey|trans }}</span>
                    {% elseif statusValue == 'annulÃ©e' %}
                        <span class="badge bg-danger">{{ statusKey|trans }}</span>
                    {% else %}
                        <span class="badge bg-secondary">{{ statusKey ? statusKey|trans : 'N/A' }}</span>
                    {% endif %}
                </td>
                <td>{{ order.createdAt|date('d/m/Y H:i') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center text-muted">{{ 'admin.orders_none'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(orders) }}
    </div>
</div>
<style>
.hero-section {
    background: radial-gradient(circle at 20% 20%, rgba(13,202,240,0.12), transparent 30%), #0f131a;
    border: 1px solid rgba(13,202,240,0.2);
    box-shadow: 0 12px 30px rgba(0,0,0,0.35);
}
</style>
{% endblock %}
