{% extends 'base.html.twig' %}
{% block title %}{{ 'admin.users_title'|trans }}{% endblock %}

{% block body %}
<div class="container mt-4 text-light">
    <div class="hero-section mb-4 p-4 p-lg-5 rounded">
        <p class="badge bg-info text-dark mb-2">#Utilisateurs</p>
        <h2 class="fw-bold mb-2">ğŸ‘¥ {{ 'admin.users_heading'|trans }}</h2>
        <p class="text-muted mb-0">GÃ©rez les comptes et rÃ´les.</p>
    </div>

    <table class="table table-dark table-striped border-info align-middle shadow-sm">
        <thead class="table-info text-dark">
            <tr>
                <th>{{ 'admin.users_id'|trans }}</th>
                <th>{{ 'admin.users_fullname'|trans }}</th>
                <th>{{ 'admin.users_email'|trans }}</th>
                <th>{{ 'admin.users_roles'|trans }}</th>
                <th>{{ 'admin.users_actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>#{{ user.id }}</td>
                <td>
                    {% set name = [user.firstName, user.lastName]|filter(v => v is not null and v != '')|join(' ') %}
                    {{ name ?: 'â€”' }}
                </td>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}
                        <span class="badge bg-{{ role == 'ROLE_ADMIN' ? 'danger' : 'info' }}">{{ role }}</span>
                    {% endfor %}
                </td>
                <td>
                    {% if 'ROLE_ADMIN' not in user.roles %}
                        <a href="{{ path('app_admin_user_delete', {id: user.id}) }}"
                           class="btn btn-sm btn-outline-danger"
                           onclick="return confirm('{{ 'admin.users_delete_confirm'|trans }}')">
                            ğŸ—‘ï¸ {{ 'admin.users_delete'|trans }}
                        </a>
                    {% else %}
                        <span class="text-muted">{{ 'admin.users_protected'|trans }}</span>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center text-muted">{{ 'admin.users_none'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(users) }}
    </div>
</div>
<style>
.hero-section {
    background: radial-gradient(circle at 20% 20%, rgba(13,202,240,0.12), transparent 30%), #0f131a;
    border: 1px solid rgba(13,202,240,0.2);
    box-shadow: 0 12px 30px rgba(0,0,0,0.35);
}
</style>
{% endblock %}
