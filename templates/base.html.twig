                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_dashboard') }}">ğŸ“Š Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_product_index') }}">ğŸ“¦ Produits</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_category_index') }}">ğŸ“š CatÃ©gories</a>
                    </li>
                {% endif %}
            </ul>

            <!-- Panier dynamique + Auth -->
            <ul class="navbar-nav align-items-center">
                <li class="nav-item position-relative me-3">
                    <a href="{{ path('app_shop_cart') }}" class="nav-link fw-bold text-info">
                        ğŸ§º <span data-cart-target="count">{{ app.session.get('cart')|length }}</span>
                    </a>
                    <small class="text-muted ms-1" data-cart-target="total">0.00 â‚¬</small>
                </li>

                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-bs-toggle="dropdown">
                            ğŸ‘¤ {{ app.user.email }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            {% if 'ROLE_ADMIN' in app.user.roles %}
                                <li>
                                    <a class="dropdown-item text-light" href="{{ path('app_admin_dashboard') }}">ğŸ“Š Tableau de bord</a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                            {% endif %}
                            <li>
                                <a class="dropdown-item text-light" href="{{ path('app_logout') }}">ğŸšª DÃ©connexion</a>
                            </li>
                        </ul>
                    </li>
                {% else %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Connexion</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}">Inscription</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<!-- Messages flash -->
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} text-center fw-bold position-fixed top-0 start-50 translate-middle-x mt-3 show"
             style="z-index: 1050;">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

<!-- Message du panier dynamique -->
<div id="flash-message"
     class="alert alert-success position-fixed top-0 start-50 translate-middle-x mt-3 text-center fw-bold"
     style="display:none; z-index: 2000;"
     data-cart-target="message">
</div>

<main class="container mb-5">
    {% block body %}{% endblock %}
</main>

