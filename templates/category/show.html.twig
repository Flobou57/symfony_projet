{% extends 'base.html.twig' %}

{% block title %}{{ 'category.show_title'|trans }}{% endblock %}

{% block body %}
<div class="container mt-5 text-light">
    <div class="card bg-dark border-secondary shadow-lg p-4">
        <h1 class="text-center mb-4 text-info">üìÅ {{ 'category.show_title'|trans }}</h1>

        <table class="table table-dark table-striped align-middle">
            <tbody>
                <tr>
                    <th class="text-info">ID</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th class="text-info">{{ 'product.name'|trans }}</th>
                    <td class="fw-bold">{{ category.name }}</td>
                </tr>
            </tbody>
        </table>

        {% if category.products is defined and category.products|length > 0 %}
            <h3 class="text-warning mt-4 mb-3">üß© {{ 'category.products_title'|trans }}</h3>
            <ul class="list-group list-group-flush">
                {% for product in category.products %}
                    <li class="list-group-item bg-dark text-light border-secondary d-flex justify-content-between align-items-center">
                        <span>{{ product.name }}</span>
                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-outline-info btn-sm">üëÅÔ∏è {{ 'common.view'|trans }}</a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="text-muted mt-3 fst-italic">{{ 'category.no_products'|trans }}</p>
        {% endif %}

        <div class="text-center mt-4">
            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning btn-lg me-2">‚úèÔ∏è {{ 'product.edit'|trans }}</a>
            <a href="{{ path('app_category_index') }}" class="btn btn-outline-light btn-lg">‚Ü©Ô∏è {{ 'common.back'|trans }}</a>
        </div>
    </div>
</div>
{% endblock %}
