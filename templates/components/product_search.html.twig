<div class="position-relative">
    <input type="text"
           class="form-control bg-dark text-light border-info"
           placeholder="{{ 'shop.search_placeholder'|trans }}"
           data-model="query"
           data-action="input->live#update"
           autofocus>
    {% if this.results is not empty %}
        <div class="list-group position-absolute w-100 mt-1"
             style="z-index: 2100;">
            {% for item in this.results %}
                <a href="{{ item.url }}"
                   class="list-group-item list-group-item-action bg-dark text-light d-flex justify-content-between align-items-center">
                    <span>{{ item.name }}</span>
                    <span class="text-info fw-bold">{{ item.price }} â‚¬</span>
                </a>
            {% endfor %}
        </div>
    {% elseif query is defined and query is not empty %}
        <div class="list-group position-absolute w-100 mt-1"
             style="z-index: 2100;">
            <div class="list-group-item bg-dark text-muted">{{ 'shop.no_results'|trans }}</div>
        </div>
    {% endif %}
</div>
