{% extends 'base.html.twig' %}

{% block title %}{{ 'home.title'|trans }}{% endblock %}

{% block body %}
<section class="hero-home text-light">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <p class="badge bg-info text-dark mb-3">{{ 'home.badge'|trans }}</p>
                <h1 class="display-4 fw-bold mb-3">{{ 'home.hero_title'|trans }}</h1>
                <p class="lead text-muted mb-4">{{ 'home.hero_subtitle'|trans }}</p>
                <div class="d-flex flex-wrap gap-3">
                    <a href="{{ path('app_shop_index') }}" class="btn btn-info btn-lg text-dark fw-bold">{{ 'home.cta_shop'|trans }}</a>
                    {% if not app.user %}
                        <a href="{{ path('app_register') }}" class="btn btn-outline-light btn-lg">{{ 'home.cta_register'|trans }}</a>
                    {% endif %}
                </div>
            </div>
            <div class="col-lg-6 text-center mt-4 mt-lg-0">
                <div class="glass-card p-4">
                    <h4 class="text-info mb-3">{{ 'home.stats_title'|trans }}</h4>
                    <div class="row text-center">
                        <div class="col-4">
                            <p class="h3 fw-bold text-light">10</p>
                            <p class="text-muted small">{{ 'home.stats_products'|trans }}</p>
                        </div>
                        <div class="col-4">
                            <p class="h3 fw-bold text-light">100%</p>
                            <p class="text-muted small">{{ 'home.stats_cart'|trans }}</p>
                        </div>
                        <div class="col-4">
                            <p class="h3 fw-bold text-light">2</p>
                            <p class="text-muted small">{{ 'home.stats_langs'|trans }}</p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <p class="text-muted small mb-1">{{ 'home.test_accounts'|trans }}</p>
                        <p class="mb-0 small">{{ 'home.test_admin'|trans }}</p>
                        <p class="mb-0 small">{{ 'home.test_client'|trans }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="container py-5 text-light">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card h-100 p-4">
                <h5 class="text-info mb-2">{{ 'home.feature_live_cart_title'|trans }}</h5>
                <p class="text-muted">{{ 'home.feature_live_cart_desc'|trans }}</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card h-100 p-4">
                <h5 class="text-info mb-2">{{ 'home.feature_backoffice_title'|trans }}</h5>
                <p class="text-muted">{{ 'home.feature_backoffice_desc'|trans }}</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card h-100 p-4">
                <h5 class="text-info mb-2">{{ 'home.feature_i18n_title'|trans }}</h5>
                <p class="text-muted">{{ 'home.feature_i18n_desc'|trans }}</p>
            </div>
        </div>
    </div>
</section>

<style>
.hero-home {
    background: radial-gradient(circle at 20% 20%, rgba(13,202,240,0.12), transparent 25%),
                radial-gradient(circle at 80% 0%, rgba(255,255,255,0.08), transparent 30%),
                #0f131a;
    border-bottom: 1px solid rgba(13,202,240,0.15);
}
.glass-card {
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    backdrop-filter: blur(6px);
    box-shadow: 0 10px 40px rgba(0,0,0,0.25);
}
.feature-card {
    background: #1a1f2a;
    border: 1px solid rgba(13,202,240,0.15);
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.2);
    transition: transform .2s ease, box-shadow .2s ease;
}
.feature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 28px rgba(0,0,0,0.25);
}
</style>
{% endblock %}
